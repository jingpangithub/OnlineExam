@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>登录 - 上机考试管理系统</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <link rel="shortcut icon" href="/favicon.ico">
    <link rel="stylesheet" href="/Content/Other/layui/css/layui.css" media="all" />
    <link rel="stylesheet" href="/Content/Other/css/login.css" media="all" />
    <link href="/Content/INSPINIA/css/bootstrap.min.css" rel="stylesheet">
    <link href="/Content/INSPINIA/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="/Content/INSPINIA/css/animate.css" rel="stylesheet">
    <link href="/Content/INSPINIA/css/style.css" rel="stylesheet">
    <link href="/Content/INSPINIA/css/plugins/toastr/toastr.min.css" rel="stylesheet" type="text/css" />
</head>
<body class="main" style="background-position: -280.8px 0px;">

    <div id="mainBody">
        <div id="cloud1" class="cloud" style="background-position: 891.1px 100px;"></div>
        <div id="cloud2" class="cloud" style="background-position: 401px 460px;"></div>
    </div>

    <div class="logintop">
        <img src="/Common/images/login/logo.png" style="width: 230px;margin-left:20px" />
        <ul>
            <li><a href="http://www.henu.edu.cn/" target="_blank"><b><font color="#FFF">河南大学</font></b></a></li>
        </ul>
    </div>


    <div class="loginbody">
        <div class="loginbox">
            <form id="form_login" class="layui-form">
                <div style="margin-top:105px; margin-left:80px;">
                    <div style="margin-bottom:25px;">
                        <input id="Username" name="Username" type="text" class="loginuser ipt" placeholder="用户名" required />
                    </div>
                    <div style="margin-bottom:25px;">
                        <input id="Password" name="Password" type="password" class="loginpwd ipt" placeholder="密码" required />
                    </div>
                    <div style="margin-bottom:25px;">
                        <button type="button" class="layui-btn loginbtn" id="submit" onclick="LoginSubmit()">登录</button>

                        <label>
                            <a href="#" onclick="javascript: alert('请联系老师或管理员！')" style="color:white">忘记密码？</a>
                        </label>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="loginbm">Copyright &copy; 2019 - @DateTime.Now.Year xxx.All Rights Reserved.</div>

    <!-- scripts -->
    <script type="text/javascript" src="/Content/Other/layui/layui.js"></script>
    <script type="text/javascript" src="/Content/Other/js/login.js"></script>
    <script src="/Content/INSPINIA/js/jquery-2.1.1.js"></script>
    <script src="/Content/INSPINIA/js/bootstrap.min.js"></script>
    <script src="/Content/INSPINIA/js/plugins/toastr/toastr.min.js" type="text/javascript"></script>
    <script src="/Content/INSPINIA/js/plugins/validate/jquery.validate.min.js"></script>
    <script>
        $(document).ready(function () {
            var a = '@Session["status"]';
            if(a == "-1")
                 toastr.warning('您已登录其他账户，请重新登录');
        })
        $.extend($.validator.messages, { required: '该项不能为空' });
        $("#form_login").validate({});
        $("input").keydown(function (event) {
            if (event.keyCode == 13)
                LoginSubmit();
        });
        function LoginSubmit() {
            if (!$("#form_login").valid()) {
                toastr.error("登录失败");
                return false;
            }
            $.ajax({
                type: "POST",       //类型
                url: "/Login/Login", //服务器地址
                cache: false,
                data: "Username=" + $("#Username").val() + "&Password=" + $("#Password").val(),   //发送给服务器的数据
                dataType: "json",
                success: function (res) {      //成功时触发的执行函数
                    if (res.result == 0) {
                        toastr.warning('登录失败，用户名或密码有误');
                        return false;
                    } else if (res.result == -7) {
                        location.href = "/Login/Index?status=-1";
                    } else {
                        window.location.href = "../Home/Index";
                        toastr.success("登录成功");
                        callback(res.data);    //返回查询结果值
                    }
                }
            });
        }
    </script>
</body>
</html>
